@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<!-- Layout wrapper-->
<div id="layoutAuthentication">
    <!-- Layout content-->
    <div id="layoutAuthentication_content">
        <!-- Main page content-->
        <main>
            <!-- Main content container-->
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-xxl-10 col-xl-10 col-lg-12">
                        <div class="card card-raised shadow-10 mt-5 mt-xl-10 mb-4">
                            <div class="row g-0">
                                <div class="col-lg-5 col-md-6">
                                    <div class="card-body p-5">
                                        <!-- Auth header with logo image-->
                                        <div class="text-center">
                                            <img class="mb-3" src="\images\svg\Color logo - no background.svg" alt="..." style="height: 58px" />
                                            <h1 class="display-5 mb-0">Login</h1>
                                            <div class="subheading-1 mb-5">to access CK Blogs</div>
                                        </div>
                                        <!-- Login submission form-->
                                        <form class="mb-5" method="post">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <div class="mb-4 form-floating">
                                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                                                <label class="w-100 form-label" asp-for="Input.Email"></label>
                                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                                            </div>
                                            <div class="mb-4 form-floating">
                                                <input asp-for="Input.Password" class="form-control" autocomplete="password" aria-required="true" />
                                                <label class="w-100 form-label" asp-for="Input.Password"></label>
                                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                                            </div>
                                            <div class="d-flex align-items-center">
                                                <label asp-for="Input.RememberMe" class="form-label">
                                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                                </label>
                                            </div>
                                            <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                                                <a class="small fw-500 text-decoration-none link-dark hover-underline-animation" asp-page="./ForgotPassword">Forgot Password?</a>
                                                <button type="submit" class="btn btn-raised-warning" style="border-radius: 10px;">Log in</button>
                                            </div>
                                        </form>
                                        <!-- Auth card message-->
                                        <div class="text-center mb-3"><a class="small fw-500 text-decoration-none link-dark hover-underline-animation" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">New User? Create an account!</a></div>
                                    </div>
                                </div>
                                <!-- Background image column using inline CSS-->
                                <div class="col-lg-7 col-md-6 d-none d-md-block" style="background-image: url('https://images.unsplash.com/photo-1499750310107-5fef28a66643?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80'); background-size: cover; background-repeat: no-repeat; background-position: center"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    }
