@using Microsoft.AspNetCore.Identity

@inject UserManager<BlogUser> UserManager


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>@ViewData["Title"] - CK Blogs</title>

    <!-- Load Material Icons from Google Fonts-->
    <link href="https://fonts.googleapis.com/css?family=Material+Icons|Material+Icons+Outlined|Material+Icons+Two+Tone|Material+Icons+Round|Material+Icons+Sharp" rel="stylesheet" />
    <!-- Roboto and Roboto Mono fonts from Google Fonts-->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Roboto+Mono:400,500" rel="stylesheet" />
    
      <!-- Load custom stylesheet-->
    <link href="~/css/Custon.css" rel="stylesheet" />
    <!-- Load main stylesheet-->
    <link href="~/css/styles.css" rel="stylesheet" />


    <!--Summernote-->
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">

</head>

@{
    BlogUser blogUser = await UserManager.GetUserAsync(User);
}

<body class="nav-fixed bg-light">
    <!-- Top app bar navigation menu-->
    <nav class="top-app-bar navbar navbar-expand" style="background: #fff;">
        <div class="container-fluid px-4">
            <!-- Drawer toggle button-->
            <button class="btn btn-lg btn-icon order-1 order-lg-0" id="drawerToggle" href="javascript:void(0);"><i class="material-icons">menu</i></button>

            <!-- Navbar brand-->
            <a class="navbar-brand me-auto" asp-controller="Home" asp-action="Index"><div class="text-uppercase font-monospace text-dark">CK Codes</div></a>

            <form asp-action="SearchIndex" asp-controller="Posts">
                <div class="input-group">
                    <input type="text" name="SearchTerm" class="form-control" style="border-radius: 10px 0px 0px 10px;" placeholder="Search Term">
                    <div class="input-group-append d-grid">
                        <button class="btn btn-sm" style="border-radius: 0px 10px 10px 0px; background: #ff993b;" type="submit">Search</button>
                    </div>
                </div>
            </form>

            <!-- Navbar items-->
            <partial name="_LoginPartial" />
        </div>
    </nav>

    <!-- Layout wrapper-->
    <div id="layoutDrawer">
        <!-- Layout navigation-->
        <div id="layoutDrawer_nav">
            <!-- Drawer navigation-->
            <nav class="drawer accordion drawer-light bg-white" id="drawerAccordion">
                <div class="drawer-menu">
                    <div class="nav">
                        <!-- Drawer section heading (Account)-->
                        <div class="drawer-menu-heading d-sm-none">Account</div>
                        <!-- Drawer link (Notifications)-->
                        <a class="nav-link d-sm-none" href="#!">
                            <div class="nav-link-icon"><i class="material-icons">notifications</i></div>
                            Notifications
                        </a>
                        <!-- Drawer link (Messages)-->
                        <a class="nav-link d-sm-none" href="#!">
                            <div class="nav-link-icon"><i class="material-icons">mail</i></div>
                            Messages
                        </a>
                        <!-- Divider-->
                        <div class="drawer-menu-divider d-sm-none"></div>
                        <!-- Drawer section heading (Company)-->
                        <div class="drawer-menu-heading">CK Blogs</div>
                        <!-- Divider-->
                        <div class="drawer-menu-divider d-sm-none"></div>

                        <!-- Link (Home)-->
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            <div class="nav-link-icon" style="color: #ff993b"><i class="material-icons">home</i></div>
                            Home
                        </a>
                        <!-- Link (About)-->
                        <a class="nav-link" asp-controller="Home" asp-action="About">
                            <div class="nav-link-icon" style="color: #ff993b"><i class="material-icons">description</i></div>
                            About
                        </a>
                        <!-- Link (Contact)-->
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">
                            <div class="nav-link-icon" style="color: #ff993b"><i class="material-icons">contact_page</i></div>
                            Contact
                        </a>

                        @if (User.IsInRole("Administrator"))
                        {
                            <!-- Link (Create Blog)-->
                            <a class="nav-link" asp-area="" asp-controller="Blogs" asp-action="Create">
                                <div class="nav-link-icon" style="color: #ff993b"><i class="material-icons">newspaper</i></div>
                                Create Blog
                            </a>
                            <!-- Link (Create Post)-->
                            <a class="nav-link" asp-area="" asp-controller="Blogs" asp-action="Create">
                                <div class="nav-link-icon" style="color: #ff993b"><i class="material-icons">post_add</i></div>
                                Create Post
                            </a>
                        }

                        <!-- Drawer link (Blogs) -->
                        <a class="nav-link collapsed" href="javascript:void(0);" data-bs-toggle="collapse" data-bs-target="#collapseBlogs" aria-expanded="false" aria-controls="collapseDashboards">
                            <div class="nav-link-icon"style="color: #ff993b"><i class="material-icons">feed</i></div>
                            Blog Topics
                            <div class="drawer-collapse-arrow"><i class="material-icons">expand_more</i></div>
                        </a>
                        <!-- Nested drawer nav (Blogs Links) TODO - Loop over categories -->
                        <div class="collapse" id="collapseBlogs" aria-labelledby="headingOne" data-bs-parent="#drawerAccordion">
                            <nav class="drawer-menu-nested nav">
                                <a asp-action="Blogs" asp-controller="Index">Looped over blog topics</a>
                            </nav>
                        </div>

                        <!-- Divider-->
                        <div class="drawer-menu-divider"></div>
                    </div>
                </div>
                <!-- Drawer footer        -->
                <div class="drawer-footer border-top">
                    <div class="d-flex align-items-center">
                        <i class="material-icons" style="color: #ff993b">account_circle</i>
                        <div class="ms-3">
                            @if (blogUser?.Id != null)
                            {
                                <div class="caption">Logged in:</div>
                                <div class="small fw-500">@blogUser.FullName</div>
                            }
                            else
                            {
                                <div class="caption">Welcome:</div>
                                <div class="small fw-500">To my blog!</div>
                            }

                        </div>
                    </div>
                </div>
            </nav>
        </div>

        <!-- Layout content-->
        <div id="layoutDrawer_content">
            <!-- Main page content-->
            <main>
                <div class="container-xl p-5">
                    @RenderBody()
                </div>
            </main>

            <!-- Footer-->
            <!-- Min-height is set inline to match the height of the drawer footer-->
            <footer class="py-4 mt-auto border-top" style="min-height: 74px">
                <div class="container-xl px-5">
                    <div class="d-flex flex-column flex-sm-row align-items-center justify-content-sm-between small">
                        <div class="me-sm-2">Copyright &copy; <a href="https://charliekaylor.com" target="_blank">charliekaylor.com</a> @DateTimeOffset.Now.Year</div>
                        <div class="d-flex ms-sm-2">

                            <ul class="list-inline text-center">
                                <li class="list-inline-item">
                                    <a href="#!">
                                        <span class="fa-stack fa-lg">
                                            <i class="fas fa-circle fa-stack-2x"></i>
                                            <i class="fab fa-twitter fa-stack-1x fa-inverse"></i>
                                        </span>
                                    </a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="#!">
                                        <span class="fa-stack fa-lg">
                                            <i class="fas fa-circle fa-stack-2x"></i>
                                            <i class="fab fa-facebook-f fa-stack-1x fa-inverse"></i>
                                        </span>
                                    </a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="#!">
                                        <span class="fa-stack fa-lg">
                                            <i class="fas fa-circle fa-stack-2x"></i>
                                            <i class="fab fa-github fa-stack-1x fa-inverse"></i>
                                        </span>
                                    </a>
                                </li>
                            </ul>


                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- Load Bootstrap JS bundle-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>

    
    <!--Summernote-->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>

    <!--Sweetalert2 Plugin-->
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Core theme JS-->
    <script src="~/js/site.js"></script>
    <!-- Load Prism plugin scripts-->
    <script src="~/js/prism.js"></script>

    <script type="module" src="~/js/material.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>



