@using TheBlogFinalMVC.Services
@using TheBlogFinalMVC.Models

@model Blog
@inject IImageService imageService

@{
    ViewData["Title"] = "Edit";
}

<h1 class="ps-3">Edit</h1>

<h4 class="ps-3">Blog</h4>
<hr />
<div class="row px-3">
    <div class="col-md-6 pe-3">

        <form enctype="multipart/form-data" asp-action="Edit">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group py-2">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group py-2">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" > </textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group py-2">
                <label asp-for="Image" class="control-label"></label>
                <input type="file" name="NewImage" class="form-control" accept=".jpg, .png, .jpeg, .gif"/>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div class="form-group py-2">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>

    </div>

    <div class="col-md-6">
        <img class="img-fluid" width="200px;" src="@imageService.DecodeImage(Model.ImageData, Model.ContentType)" />
    </div>

</div>

<div class="ps-3">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
